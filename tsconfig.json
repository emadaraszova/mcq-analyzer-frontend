{
  "compilerOptions": {
    "target": "ES2020", // <-- important (private fields need ES2015+)
    "module": "ESNext",
    "moduleResolution": "bundler", // or "node16" if you prefer
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true, // ignore weirdness in node_modules .d.ts
    "noEmit": true
  },
  "include": ["src"]
}
